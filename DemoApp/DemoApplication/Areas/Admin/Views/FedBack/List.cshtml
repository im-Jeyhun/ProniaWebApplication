@model List<ListItemViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-fedback-add" class="btn btn-secondary">Add new feedback</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Books</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>User Profile</th>
                            <th>User Name</th>
                            <th>User Role</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var fedback in Model)
                        {
                            <tr>
                                <td> <img src="~/@fedback.ProfilePhotoUrl" width="10%"> </td>
                                <td>@fedback.FullName</td>
                                <td>@fedback.Role</td>
                                <td>@fedback.CreatedAt</td>
                                <td class="text-end">
                                    <a asp-route="admin-fedback-update" asp-route-id="@fedback.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-fedback-delete" asp-route-id="@fedback.Id" id="fedback-form-@fedback.Id"></form>
                                    <button type="submit" form="fedback-form-@fedback.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>