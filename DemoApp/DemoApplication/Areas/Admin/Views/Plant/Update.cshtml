@using DemoApplication.Areas.Admin.ViewModels.Plant.Add
@model UpdateViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Plants</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-plant-update" asp-route-id="@Model.Id" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label>Name</label>
                            <input multiple asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Price</label>
                            <input asp-for="Price" class="form-control">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Content</label>
                            <input asp-for="Content" class="form-control">
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Categories</label>
                            <select id="categoriess" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categiries , nameof(CategoryListItemViewModel.Id), nameof(CategoryListItemViewModel.Title)))" class="form-select get-subcategories">                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>


                        <div class="form-group salambaki" id="subcategory-container">
                            <label>Sub Categories</label>
                            @if (Model.SubCategoryId is null)
                            {

                                <select asp-for="SubCategoryId" asp-items="@(new SelectList(Model.SubCategories , nameof(SubCategoryListItemViewModel.SubCategorItemViewModel.Id), nameof(SubCategoryListItemViewModel.SubCategorItemViewModel.Title)))" class="form-select get-subcategories">
                                    <option value="" selected>--- SELECT CATEGORY ---</option>

                                </select>

                            }
                            else
                            {
                                <select asp-for="SubCategoryId" asp-items="@(new SelectList(Model.SubCategories , nameof(SubCategoryListItemViewModel.SubCategorItemViewModel.Id), nameof(SubCategoryListItemViewModel.SubCategorItemViewModel.Title)))" class="form-select get-subcategories">
                                </select>
                            }
                            <span asp-validation-for="SubCategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Colors</label>
                            <select asp-for="ColorIds" asp-items="@(new SelectList(Model.Colors , nameof(ColorListItemViewModel.Id), nameof(ColorListItemViewModel.Name)))" class="form-select get-subcategories">                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Sizes</label>
                            <select asp-for="SizeIds" asp-items="@(new SelectList(Model.Sizes , nameof(SizeListItemViewModel.Id), nameof(SizeListItemViewModel.Name)))" class="form-select get-subcategories">                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Tags</label>
                            <select asp-for="TagIds" asp-items="@(new SelectList(Model.Tags , nameof(ColorListItemViewModel.Id), nameof(ColorListItemViewModel.Name)))" class="form-select get-subcategories">                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>