@model List<ListItemViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-plant-add" class="btn btn-secondary">Add new plant</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Books</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Sku Code</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Category </th>
                            <th>SubCategory </th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var plant in Model)
                        {
                            <tr>
                                <td>@plant.Sku</td>
                                <td>@plant.Name</td>
                                <td>@plant.Price</td>
                                <td>@plant.Category</td>
                                <td>@plant.SubCategory</td>
                                <td width="50px"><img src="~/@plant.ImageUrl" width="100%"></img></td>

                                <td class="text-end">
                                    <a asp-route="admin-plant-update" asp-route-id="@plant.Id" ><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-plant-delete" asp-route-id="@plant.Id" id="plant-form-@plant.Id" ></form>
                                    <button type="submit" form="plant-form-@plant.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>

                                     <a asp-route="admin-plant-image-list" asp-route-plantId="@plant.Id">Add Image</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>