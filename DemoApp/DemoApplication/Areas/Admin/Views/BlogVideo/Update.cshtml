@model UpdateViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Blog Video</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-plant-video-update" asp-route-blogId="@Model.BlogId"  asp-route-blogVideoId="@Model.BlogtVideoId" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                      
                        <div class="form-group">
                            <label>Video</label>
                            <input asp-for="Video" class="form-control">
                            <span asp-validation-for="Video" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <input asp-for="VideoUrl" type="hidden">
                            <video src="~/@Model.VideoUrl"></video>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>