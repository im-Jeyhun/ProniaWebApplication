@model List<ListItemViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-subcategory-add" class="btn btn-secondary">Add new subcategory</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Subcategory</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Belonged Category</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subcategory in Model)
                        {
                            <tr>
                                <td>@subcategory.Title</td>
                                <td>@subcategory.CategoryName</td>
                                <td class="text-end">
                                    <a asp-route="admin-subcategory-update" asp-route-id="@subcategory.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-subcategory-delete" asp-route-id="@subcategory.Id" id="subcategory-form-@subcategory.Id"></form>
                                    <button type="submit" form="subcategory-form-@subcategory.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>