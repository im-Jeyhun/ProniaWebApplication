@model List<ListItemViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-add-payment-benefit" class="btn btn-secondary">Add new payment benefits</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Payment Benefits</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Content</th>
                            <th>Image</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var paymentBenefit in Model)
                        {
                            <tr>
                                <td>@paymentBenefit.Name</td>
                                <td>@paymentBenefit.Content</td>
                                <td> <img src="~/@paymentBenefit.ImageUrl" alt="@paymentBenefit.ImageName" width="20%"> </td>
                                <td class="text-end">
                                    <a asp-route="admin-update-payment-benefit" asp-route-id="@paymentBenefit.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-delete-payment-benefit" asp-route-id="@paymentBenefit.Id" id="payment-form-@paymentBenefit.Id"></form>
                                    <button type="submit" form="payment-form-@paymentBenefit.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>