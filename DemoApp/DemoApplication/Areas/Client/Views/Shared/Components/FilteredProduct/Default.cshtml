@using DemoApplication.Areas.Client.ViewModels.Product
@model ListItemViewModel

  @foreach(var product in @Model.Products)
                                {
                       <div class="col-md-4 col-sm-6">
                         <div class="product-item">
                        <div class="product-img">
                          <a asp-route="client-product-item" asp-route-id="@product.Id">
                            <img
                              class="primary-img"
                              src="~/@product.MainImageUrl"
                              alt="Product Images"
                            />
                            <img
                              class="secondary-img"
                              src="~/@product.HoverImageUrl"
                              alt="Product Images"
                            />
                          </a>
                          <div class="product-add-action">
                            <ul>
                              <li>
                                <a
                                  href="wishlist.html"
                                  data-tippy="Add to wishlist"
                                  data-tippy-inertia="true"
                                  data-tippy-animation="shift-away"
                                  data-tippy-delay="50"
                                  data-tippy-arrow="true"
                                  data-tippy-theme="sharpborder"
                                >
                                  <i class="pe-7s-like"></i>
                                </a>
                              </li>
                              <li
                                class="quuickview-btn"
                                data-bs-toggle="modal"
                                data-bs-target="#quickModal"
                                  
                               
                              >
                                <a  
                                    class="fillmodal"
                                  asp-route="client-plant-modal" asp-route-plantId="@product.Id"
                                  data-tippy="Quickview"
                                  data-tippy-inertia="true"
                                  data-tippy-animation="shift-away"
                                  data-tippy-delay="50"
                                  data-tippy-arrow="true"
                                  data-tippy-theme="sharpborder"
                                >
                                  <i class="pe-7s-look"></i>
                                </a>
                              </li>
                              <li>
                                <a class="add-product-to-basket-btn" asp-route="client-basket-add" asp-route-id="@product.Id"
                                  data-tippy="Add to cart"
                                  data-tippy-inertia="true"
                                  data-tippy-animation="shift-away"
                                  data-tippy-delay="50"
                                  data-tippy-arrow="true"
                                  data-tippy-theme="sharpborder"
                                >
                                  <i class="pe-7s-cart"></i>
                                </a>
                              </li>
                            </ul>
                          </div>
                        </div>
                        <div class="product-content">
                          <a class="product-name" href="shop.html"
                            >@product.Name</a
                          >
                          <div class="price-box pb-1">
                            <span class="new-price">$@product.Price</span>
                          </div>
                          <div class="rating-box">
                            <ul>
                              <li><i class="fa fa-star"></i></li>
                              <li><i class="fa fa-star"></i></li>
                              <li><i class="fa fa-star"></i></li>
                              <li><i class="fa fa-star"></i></li>
                              <li><i class="fa fa-star"></i></li>
                            </ul>
                          </div>
                        </div>
                      </div>
                      </div>
                                }   


