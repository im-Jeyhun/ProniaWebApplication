@model RegisterViewModel


<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Login & Register Page</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Login | Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row">

                <div class="col-lg-12 pt-5 pt-lg-0">
                    <form method="POST" asp-route="client-auth-register">
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <label for="email">First name</label>
                                    <input asp-for="FirstName" class="mb-0 form-control" id="FirstName" placeholder="Enter Your FirstName Address Here..">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label for="email">LastName</label>
                                    <input asp-for="LastName" class="mb-0 form-control" id="LastName" placeholder="Enter Your LastName Address Here..">
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label for="email">Email</label>
                                    <input asp-for="Email" class="mb-0 form-control" id="email" placeholder="Enter Your Email Address Here..">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label for="password">Password</label>
                                    <input asp-for="Password" class="mb-0 form-control" placeholder="Enter your password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label for="password">Repeat Password</label>
                                    <input asp-for="ConfirmPassword" class="mb-0 form-control" placeholder="Repeat your password">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Register
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here -->
